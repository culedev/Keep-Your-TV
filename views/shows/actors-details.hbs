<div id="each-actor-data">

<h1>{{actorDetails.name}}</h1>
{{#if actorDetails.profile_path}}
<img
  src="https://image.tmdb.org/t/p/original/{{actorDetails.profile_path}}"
  alt="{{actorDetails.name}}"
  width="200px"
/>
{{else}}
<img
  src="/images/no-image.png"
  alt="{{actorDetails.name}}"
  width="200px"
/>
{{/if}}
<p>{{actorDetails.biography}}</p>
</div>
<div class="list">
  {{#each actorShows}}
    <div class="each-list-show">
      <p><a href="/shows/{{this.id}}/details"><img
            src="https://image.tmdb.org/t/p/original/{{this.poster_path}}"
            alt="{{this.name}}"
            width="100"
            height="140"
          /></a></p>

      <p>
        {{this.name}}
      </p>
    </div>
  {{/each}}
</div>