<h1>{{genreName.name}}</h1>

<div class="shows">
  {{#each genre}}
    <div class="each-show">
      {{#if this.poster_path}}
      <a class="link" href="/shows/{{this.id}}/details">
        <img
          src="https://image.tmdb.org/t/p/original/{{this.poster_path}}"
          alt=""
          width="200px"
          height="300px"
        />
      </a>
      {{else}}
      <a class="link" href="/shows/{{this.id}}/details">
        <img
          src="/images/no-image.png"
          alt=""
          width="200px"
          height="300px"
        /> 
      </a>
      {{/if}}
      <div class="show-data">
        <a class="link" href="/shows/{{this.id}}/details">
          <h3 id="title">{{this.name}}</h3>
          <p>{{this.overview}}</p>
          <p>Genre:
            {{#each this.newList}}
              |
              {{this.name}}
              |
            {{/each}}
          </p>
          <p>Average rate: {{this.vote_average}}</p>
        </a>
      </div>

    </div>
  {{/each}}
  <nav aria-label="Page navigation example">
    <ul class="pagination">
      <li class="page-item"><a
          class="page-link"
          href="/shows/1/genre/{{genreName.id}}"
        >1</a></li>
      <li class="page-item"><a
          class="page-link"
          href="/shows/2/genre/{{genreName.id}}"
        >2</a></li>
      <li class="page-item"><a
          class="page-link"
          href="/shows/3/genre/{{genreName.id}}"
        >3</a></li>
      <li class="page-item"><a
          class="page-link"
          href="/shows/4/genre/{{genreName.id}}"
        >4</a></li>
      <li class="page-item"><a
          class="page-link"
          href="/shows/5/genre/{{genreName.id}}"
        >5</a></li>
    </ul>
  </nav>
</div>