<h1 class="bold-title">My lists</h1>

<h3 class="bold-title">My favorites shows</h3>
<div class="list">
  {{#each favShows}}
    <div class="each-list-show">
      <div class="card" style="width: 160px; height:330px">
        <a class="link" href="/shows/{{this.apiId}}/details">
          <img
            src="https://image.tmdb.org/t/p/original/{{this.img}}"
            class="card-img-top"
            alt=""
            width="150px"
            height="240px"
          />
        </a>
        <div class="card-body">

          <h5 class="card-title" style="font-size:14px">{{this.name}}</h5>
        </div>
      </div>
    </div>
  {{/each}}
  <br />
</div>
  <button class="list-btn"><a href="/profile/lists/my-favorites">Show more...</a></button>

